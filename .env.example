# LLM API Key
# This key is used for automatic PPT summary generation
# Supports: OpenAI, Google Gemini, or OpenAI-compatible APIs

LLM_API_KEY=your-api-key-here

# Attribute LLM Configuration
# Used for LLM-based attribute extraction (separate from PPT summary LLM)
ATTR_LLM_API_KEY=your-api-key-here
ATTR_LLM_BASE_URL=https://api.openai.com/v1
ATTR_LLM_MODEL=gpt-4o

# UI Feature Flags
# Set to "true" to show, "false" to hide
VITE_ENABLE_REPARSE_ALL=true
VITE_ENABLE_REPARSE_SLIDE=true
VITE_ENABLE_DOWNLOAD=true
